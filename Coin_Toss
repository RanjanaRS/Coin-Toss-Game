    <script>
         let success=0;
         let round=0;
        function coin()
        {
           var result1=document.getElementById("res1");
            var result2=document.getElementById("res2");
             var result3=document.getElementById("res3");
             var result4=document.getElementById("res4");
            var guess=document.getElementById("val").value;
            result3.innerHTML="";
            let y;
            let x=Math.random()
            if(x<0.5)
           { 
              y="head";
            }
            else{
                y="tail";
            }
            if(guess!="head" && guess!="tail")
            {
               
                  result3.innerHTML="âŒPlz enter head or tail";
            }
          if(y=="head" && guess=="head")
          {
               round++;
               success++;
               result4.innerHTML="HEAD";
                 result1.innerHTML="No of rounds played :" +round;
            result2.innerHTML="No of successful predictions : "+success;  
          }
           if(y=="head" && guess=="tail")
          {
               round++;
               result4.innerHTML="HEAD";
                 result1.innerHTML="No of rounds played :" +round;
            result2.innerHTML="No of successful predictions : "+success;  
              
          }
           if(y=="tail" && guess=="tail")
          {
               round++;
               success++;
               result4.innerHTML="TAIL";
                 result1.innerHTML="No of rounds played :" +round;
            result2.innerHTML="No of successful predictions : "+success;  
          }
           if(y=="tail" && guess=="head")
          {
               round++;
               result4.innerHTML="TAIL";
                 result1.innerHTML="No of rounds played :" +round;
            result2.innerHTML="No of successful predictions : "+success;  
          }
          
        }

    </script>
